{
  "kind": "collectionType",
  "collectionName": "packages",
  "info": {
    "displayName": "Package",
    "singularName": "package",
    "pluralName": "packages"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true,
      "default": 50
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "features": {
      "type": "component",
      "component": "package.feature",
      "repeatable": true,
      "required": true
    },
    "cta_text": {
      "type": "string"
    },
    "cta_link": {
      "type": "string"
    },
    "tours": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tour.tour"
    }
  }
}
