{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": { "displayName": "Category", "singularName": "category", "pluralName": "categories" },
  "options": { "draftAndPublish": false },
  "attributes": {
    "name": { "type": "string", "required": true },
    "slug": { "type": "uid", "targetField": "name", "required": true, "unique": true },
    "description": { "type": "text" },
    "tours": { "type": "relation", "relation": "manyToMany", "target": "api::tour.tour" },
    "posts": { "type": "relation", "relation": "oneToMany", "target": "api::blog-post.blog-post" }
  }
}
